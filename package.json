    "main": "build/electron/index.js",
    "scripts": {
        "rebrand": "node rebrand/rebrand.js",
        "build": "yarn compile && react-app-rewired build",
        "build:ci": "cross-env GENERATE_SOURCEMAP=false yarn build",
        "build:e2e": "cross-env REACT_APP_IS_E2E=1 GENERATE_SOURCEMAP=false yarn build",
        "build:linux": "yarn rebrand && yarn build:ci && electron-builder --linux --publish never",
        "build:linux:publish": "yarn rebrand && yarn build:ci && electron-builder --linux --publish always",
        "build:mac": "yarn rebrand && yarn build:ci && electron-builder --mac --publish never",
        "build:mac:publish": "yarn rebrand && yarn build:ci && electron-builder --mac --publish always",
        "build:win": "yarn rebrand && yarn build:ci && electron-builder --win --x64 --ia32 --publish never",
        "build:win:publish": "yarn rebrand && yarn build:ci && electron-builder --win --x64 --ia32 --publish always",
        "check:sdk-updates": "npx npm-check-updates \"/^@payvo.*$/\" -u",
        "compile": "electron-webpack",
        "dev": "yarn rebrand && cross-env concurrently --kill-others \"yarn start\" \"wait-on http://localhost:3000 && electron-webpack dev\"",
        "eject": "react-app-rewired eject",
        "electron-rebuild": "electron-builder install-app-deps",
        "format": "yarn lint && yarn prettier",
        "postinstall": "yarn electron-rebuild",
        "lint": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
        "lint:nibble": "eslint-nibble '*/**/*.{js,ts,tsx}'",
        "prettier": "prettier --write \"./*.{ts,tsx,js,json,md}\" \"./**/*.{ts,tsx,js,json,md}\"",
        "start": "yarn rebrand && cross-env BROWSER=none react-app-rewired start",
        "test": "react-app-rewired --expose-gc test --env=./src/tests/custom-env.js --logHeapUsage",
        "test:coverage": "react-app-rewired --expose-gc test --env=./src/tests/custom-env.js --logHeapUsage --coverage --watchAll=false",
        "test:e2e": "cross-env ELECTRON_IS_E2E=1 ELECTRON_IS_DEV=0 gherkin-testcafe --config-file=.testcaferc.json",
        "test:e2e:ci": "cross-env ELECTRON_IS_E2E=1 ELECTRON_IS_DEV=0 gherkin-testcafe --config-file=.testcaferc.json -q attemptLimit=3,successThreshold=1",
        "preversion": "cross-env ./scripts/version-artifacts.sh"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "jest": {
        "automock": false,
        "coveragePathIgnorePatterns": [
            "index.ts",
            "index.tsx",
            "data.ts"
        ],
        "coverageReporters": [
            "json",
            "lcov",
            "text",
            "clover",
            "html"
        ],
        "moduleDirectories": [
            "node_modules",
            "utils"
        ],
        "moduleNameMapper": {
            "@/(.*)$": "<rootDir>/src/$1"
        },
        "resetModules": true,
        "setupFilesAfterEnv": [
            "<rootDir>/jest.setup.js"
        ]
    },
