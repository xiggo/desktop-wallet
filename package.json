    "optionalDependencies": {
        "fsevents": "*"
    },
    "babelMacros": {
        "twin": {
            "preset": "styled-components",
            "css": {
                "from": "styled-components",
                "import": "css"
            },
            "config": "src/tailwind.config.js",
            "autoCssProp": true
        }
    },
    "build": {
        "productName": "Payvo Wallet",
        "appId": "io.payvo.wallet",
        "artifactName": "${name}-${os}-${arch}-${version}.${ext}",
        "afterSign": "scripts/notarize.js",
        "npmRebuild": true,
        "extraMetadata": {
            "main": "build/electron/index.js"
        },
        "publish": {
            "provider": "github",
            "vPrefixedTagName": false
        },
        "extraResources": [
            "app-update.yml"
        ],
        "protocols": {
            "name": "Payvo URI scheme",
            "schemes": [
                "payvo"
            ],
            "role": "Viewer"
        },
        "directories": {
            "output": "dist/target"
        },
        "mac": {
            "category": "public.app-category.finance",
            "icon": "src/app/assets/icons/icon.icns",
            "hardenedRuntime": true,
            "gatekeeperAssess": false,
            "asarUnpack": [
                "**/*.node"
            ],
            "entitlements": "./entitlements.mac.plist",
            "entitlementsInherit": "./entitlements.mac.plist"
        },
        "win": {
            "target": "nsis",
            "icon": "src/app/assets/icons/icon.ico"
        },
        "linux": {
            "category": "Utility",
            "icon": "src/app/assets/icons",
            "target": [
                "AppImage",
                "deb",
                "tar.gz"
            ],
            "desktop": {
                "MimeType": "x-scheme-handler/payvo;"
            }
        },
        "deb": {
            "depends": [
                "gconf2",
                "gconf-service",
                "libnotify4",
                "libappindicator1",
                "libxtst6",
                "libnss3",
                "libudev-dev"
            ]
        },
        "dmg": {
            "icon": "src/app/assets/icons/icon.icns"
        },
        "nsis": {
            "perMachine": true,
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        }
    },
    "electronWebpack": {
        "main": {
            "sourceDirectory": "src/electronic",
            "webpackConfig": "webpack.main.config.js"
        },
        "renderer": {
            "sourceDirectory": null
        }
    }
}